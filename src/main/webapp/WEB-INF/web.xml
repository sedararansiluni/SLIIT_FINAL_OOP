<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
  <display-name>Beauty Salon Application</display-name>

  <!-- Servlet Definitions -->
  <servlet>
    <servlet-name>SignUpServlet</servlet-name>
    <servlet-class>com.beauty.servlet.SignUpServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SignInServlet</servlet-name>
    <servlet-class>com.beauty.servlet.SignInServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.beauty.servlet.LogoutServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>BookAppointmentServlet</servlet-name>
    <servlet-class>com.beauty.servlet.BookAppointmentServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>UserProfileServlet</servlet-name>
    <servlet-class>com.beauty.servlet.UserProfileServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AppointmentListServlet</servlet-name>
    <servlet-class>com.beauty.servlet.AppointmentListServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AppointmentActionServlet</servlet-name>
    <servlet-class>com.beauty.servlet.AppointmentActionServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AdminAppointmentServlet</servlet-name>
    <servlet-class>com.beauty.servlet.AdminAppointmentServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AdminAppointmentActionServlet</servlet-name>
    <servlet-class>com.beauty.servlet.AdminAppointmentActionServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AdminUserListServlet</servlet-name>
    <servlet-class>com.beauty.servlet.AdminUserListServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ServiceServlet</servlet-name>
    <servlet-class>com.beauty.servlet.ServiceServlet</servlet-class>
  </servlet>

  <!-- Servlet Mappings -->
  <servlet-mapping>
    <servlet-name>SignUpServlet</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SignInServlet</servlet-name>
    <url-pattern>/signin</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>BookAppointmentServlet</servlet-name>
    <url-pattern>/bookAppointment</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>UserProfileServlet</servlet-name>
    <url-pattern>/userProfile</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AppointmentListServlet</servlet-name>
    <url-pattern>/myAppointments</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AppointmentActionServlet</servlet-name>
    <url-pattern>/appointmentAction</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AdminAppointmentServlet</servlet-name>
    <url-pattern>/adminAppointments</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AdminAppointmentActionServlet</servlet-name>
    <url-pattern>/adminAppointmentAction</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AdminUserListServlet</servlet-name>
    <url-pattern>/adminUsers</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ServiceServlet</servlet-name>
    <url-pattern>/services</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ServiceCartServlet</servlet-name>
    <servlet-class>com.beauty.servlet.ServiceCartServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ServiceCartServlet</servlet-name>
    <url-pattern>/serviceCart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CartStorageTestServlet</servlet-name>
    <servlet-class>com.beauty.servlet.CartStorageTestServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CartStorageTestServlet</servlet-name>
    <url-pattern>/cartStorageTest</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>InquiryServlet</servlet-name>
    <servlet-class>com.beauty.servlet.InquiryServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>InquiryServlet</servlet-name>
    <url-pattern>/submitInquiry</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>InquiryReplyServlet</servlet-name>
    <servlet-class>com.beauty.servlet.InquiryReplyServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>InquiryReplyServlet</servlet-name>
    <url-pattern>/replyInquiry</url-pattern>
  </servlet-mapping>

  <!-- Welcome File List -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
